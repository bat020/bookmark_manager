<!DOCTYPE html>
<html>
  <head>
    <title>Bookmark Manager</title>
  </head>

  <body>
    <% if current_user %>
      <p>Welcome, <%= current_user.email %></p>
    <% end %>
    <% if flash[:errors] && !flash[:errors].empty? %>
      <p>Please refer to the following errors below:</p>
      <ul id='errors'>
        <% flash[:errors].each do |error| %>
          <li><%= error %></li>
        <% end %>
      </ul>
    <% end %>
    <%= yield %>
  </body>
</html>
